<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="Verify"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#004f71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/certIdField"
            android:hint="Enter Certificate ID"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/chooseFileBtn"
            android:text="Choose Certificate (PDF)"
            android:drawableRight="@drawable/outline_attach_file_add_24"
            android:textColor="#FFF"
            android:backgroundTint="#004f71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/uploadBtn"
            android:text="Upload Certificate"
            android:drawableRight="@drawable/outline_file_save_24"
            android:textColor="#FFF"
            android:backgroundTint="#004f71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/verifyBtn"
            android:text="Verify Certificate"
            android:drawableRight="@drawable/outline_check_circle_24"
            android:textColor="#FFF"
            android:backgroundTint="#004f71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/resultBtn"
            android:text="Check Results"
            android:drawableRight="@drawable/outline_file_copy_24"
            android:textColor="#FFF"
            android:backgroundTint="#004f71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
